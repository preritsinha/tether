# Tether Backend Config
# Copy this to .env and update as needed

# Where your frontend is running (for CORS)
FRONTEND_ORIGIN=http://localhost:3000

# How long rooms last before auto-expiring (in seconds)
# Default is 3 hours = 10800 seconds
ROOM_TTL_SECONDS=10800

# Server stuff (you probably won't need to change these)
HOST=0.0.0.0
PORT=8000

# Set to false in production
DEBUG=true

